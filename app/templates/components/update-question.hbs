{{#if updateQuestionForm}}
  <h1>Update {{question.title}}</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="answer">Answers</label>
        {{input value=answer id="answer"}}
      </div>

      <button {{action 'updateQuestion' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update This Question</button>
{{/if}}
