{{#if updateAnswerForm}}
  <h1>Update {{answer.author}}'s {{answer.content}}'</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="details">Additional Details</label>
        {{input value=details id="details"}}
      </div>

      <div class="form-group">
        <label for="image">Image/Diagrams</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="question">Question Being Answered</label>
        {{input value=question id="question"}}
      </div>

      <button {{action 'update' answer}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateAnswerForm'}}>Update This Answer</button>
{{/if}}
